{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2017",
    "noEmit": true,
    "module": "esnext",
    "lib": ["esnext"],

    "strict": false,
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
